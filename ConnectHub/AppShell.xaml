<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConnectHub.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConnectHub"
    
    xmlns:pages="clr-namespace:ConnectHub.Pages"
    
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="ConnectHub">

    
        
        <ShellContent Title="Main Menu" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Add Person" Route="AddPersonPage" ContentTemplate="{DataTemplate pages:AddPersonPage}" />
        <ShellContent Title="Contact List" Route="PersonsListPage" ContentTemplate="{DataTemplate pages:PersonsListPage}" />
        <ShellContent Title="Show A Contact" Route="ShowPersonPage" ContentTemplate="{DataTemplate pages:ShowPersonPage}" />
        <ShellContent Title="Update Contact" Route="UpdatePersonPage" ContentTemplate="{DataTemplate pages:UpdatePersonPage}" />
        <ShellContent Title="Remove Contact" Route="RemovePersonPage" ContentTemplate="{DataTemplate pages:RemovePersonPage}" />
        
    

</Shell>
