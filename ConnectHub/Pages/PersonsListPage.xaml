<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectHub.Pages.PersonsListPage"
             
             xmlns:models="clr-namespace:Shared.Models;assembly=Shared"
             xmlns:viewmodels="clr-namespace:ConnectHub.ViewModels"
             x:DataType="{x:Type viewmodels:PersonListViewModel}"
             
             Title="Contact List Page">



    <ScrollView>
        <Grid RowDefinitions="auto,auto, *" Margin="20">
            <VerticalStackLayout Grid.Row="0">
                <Label Text="Contact List" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" FontAttributes="Bold" />
            
            <StackLayout Grid.Row="1">
                <Button Text="Add Content To List"  Command="{Binding Path=NavigateToAddCommand}" Margin="0,20,0,20" />
                <Button Text="Show Content In List"  Command="{Binding Path=NavigateToShowCommand}" Margin="0,0,0,20" />
            </StackLayout>
            

            <CollectionView Grid.Row="2" ItemsSource="{Binding PersonsList}" Margin="0,20,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type models:Person}">
                        <Frame BackgroundColor="Lavender" BorderColor="Lavender" Padding="10" Margin="0">
                            <Grid ColumnDefinitions="*, Auto" Padding="10">
                                <StackLayout Grid.Column="0">

                                    <Label Text="{Binding FirstName}" FontSize="16" />
                                    <Label Text="{Binding LastName}" FontSize="16" />
                                    <Label Text="{Binding Email}" FontSize="16" />
                                    <Label Text="{Binding PhoneNumber}" FontSize="16"/>
                                    <Label Text="{Binding Address}" FontSize="16" />

                                    <HorizontalStackLayout Grid.Column="1">
                                        <Button Text="EDIT" CommandParameter="{Binding .}" Command="{Binding Path=NavigateToEditCommand, Source={RelativeSource AncestorType={x:Type viewmodels:PersonListViewModel}}}" Margin="5,0,0,0" />
                                        <Button Text="DELETE" CommandParameter="{Binding .}" Command="{Binding Path=RemoveCommand, Source={RelativeSource AncestorType={x:Type viewmodels:PersonListViewModel}}}" Margin="5,0,0,0" />
                                    </HorizontalStackLayout>

                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            </VerticalStackLayout>
        </Grid>
            
        

    </ScrollView>
    
</ContentPage>