<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectHub.Pages.UpdatePersonPage"
             
             xmlns:viewmodels="clr-namespace:ConnectHub.ViewModels"
             x:DataType="{x:Type viewmodels:UpdateViewModel}"
             
             
             Title="UpdatePersonPage">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto, *" Margin="20">

            <StackLayout Grid.Row="0">
                <Label Text="Update!" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" FontAttributes="Bold"    />
            </StackLayout>

            <StackLayout Grid.Row="1" Margin="0,20,0,0">

                <Label Text="First Name"/>
                <Entry Text="{Binding Person.FirstName}"/>

                <Label Text="Last Name"/>
                <Entry Text="{Binding Person.LastName}"/>

                <Label Text="Email"/>
                <Entry Text="{Binding Person.Email}"/>

                <Label Text="Phone Number"/>
                <Entry Text="{Binding Person.PhoneNumber}"/>

                <Label Text="Address"/>
                <Entry Text="{Binding Person.Address}"/>

                <Button Command="{Binding UpdateCommand}" Text="Save" Margin="0,20,0,20" Padding="0,10"/>

            </StackLayout>


        </Grid>
    </ScrollView>


</ContentPage>