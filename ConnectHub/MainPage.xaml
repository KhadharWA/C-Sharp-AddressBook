<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:models="clr-namespace:Shared.Models;assembly=Shared"
             xmlns:viewmodels="clr-namespace:ConnectHub.ViewModels"
             x:DataType="{x:Type viewmodels:MainViewModel}"
             
             x:Class="ConnectHub.MainPage">

    <VerticalStackLayout>
        <Label Text="Main Menu" VerticalOptions="Center" HorizontalOptions="Center" FontSize="35" FontAttributes="Bold" />
        <StackLayout Margin="10,20,10,20">
            <Button Text="Add Contact" Command="{Binding NavigateToAddCommand}" Margin="0,30,0,20" FontSize="15" FontAttributes="Italic" />
            <Button Text="Contact List" Command="{Binding NavigateToListCommand}" Margin="0,0,0,20" FontSize="15" FontAttributes="Italic" />
            <Button Text="Show A Specific Contact" Command="{Binding NavigateToShowPersonCommand}"  Margin="0,0,0,20" FontSize="15" FontAttributes="Italic" />
            <Button Text="Update Contact" Command="{Binding NavigateToUpdateCommand}" Margin="0,0,0,20" FontSize="15" FontAttributes="Italic" />
            <Button Text="Remove Contact" Command="{Binding NavigateToRemoveCommand}" Margin="0,0,0,20" FontSize="15" FontAttributes="Italic"  />
        </StackLayout>
        
        
    </VerticalStackLayout>

</ContentPage>
