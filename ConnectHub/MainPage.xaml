<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:models="clr-namespace:Shared.Models;assembly=Shared"
             xmlns:viewmodels="clr-namespace:ConnectHub.ViewModels"
             x:DataType="{x:Type viewmodels:MainViewModel}"
             
             x:Class="ConnectHub.MainPage">

    <ScrollView>
        <Grid RowDefinitions="auto, *" Margin="20">
            
            <VerticalStackLayout Grid.Row="0">
                <Label Text="First Name"/>
                <Entry Text="{Binding RegistrationForm.FirstName}"/>
                
                <Label Text="LastName"/>
                <Entry Text="{Binding RegistrationForm.LastName}"/>
                
                <Label Text="Email"/>
                <Entry Text="{Binding RegistrationForm.Email}"/>
                
                <Label Text="PhoneNumber "/>
                <Entry Text="{Binding RegistrationForm.PhoneNumber}"/>
                
                <Label Text="Address"/>
                <Entry Text="{Binding RegistrationForm.Address}"/>

                <Button Command="{Binding AddContentToListCommand}" Text="Add To List" Margin="0,20,0,20" Padding="0,10"/>

            </VerticalStackLayout>
            
        </Grid>
    </ScrollView>

</ContentPage>
